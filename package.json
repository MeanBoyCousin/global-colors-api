{
    "name": "global-colors-api",
    "version": "1.0.0",
    "eslintConfig": {
        "env": {
            "commonjs": true,
            "es6": true,
            "node": true
        },
        "extends": [
            "standard"
        ],
        "globals": {
            "Atomics": "readonly",
            "SharedArrayBuffer": "readonly"
        },
        "parserOptions": {
            "ecmaVersion": 2018
        },
        "rules": {
            "indent": [
                "error",
                4
            ],
            "operator-linebreak": [
                "error",
                "after",
                {
                    "overrides": {
                        ":": "before"
                    }
                }
            ]
        }
    },
    "browserslist": [
        "and_chr >= 78",
        "and_uc >= 12.12",
        "ios_saf >= 12.2",
        "samsung >= 10.1",
        "chrome >= 77",
        "edge >= 18",
        "firefox >= 70",
        "ie >= 11",
        "safari >= 5.1"
    ],
    "description": "An API to access associated color schemes from countries around the world.",
    "main": "ccapi.js",
    "scripts": {
        "test": "newman run app/tests/global-colors-api.postman_collection",
        "start": "node app/gcapi.js",
        "prod-start": "nodemon app/gcapi.js",
        "build": "gulp"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/MeanBoyCousin/global-colors-api.git"
    },
    "keywords": [
        "Countries",
        "Continents",
        "Colors",
        "API"
    ],
    "author": "Tim Dunphy",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/MeanBoyCousin/global-colors-api/issues"
    },
    "homepage": "https://github.com/MeanBoyCousin/global-colors-api#readme",
    "dependencies": {
        "color-groups": "^1.0.1",
        "connect-timeout": "^1.9.0",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "ejs": "^3.1.3",
        "express": "^4.18.2",
        "express-prettify": "^0.1.1",
        "sqlite3": "^4.2.0"
    },
    "devDependencies": {
        "autoprefixer": "^9.8.5",
        "color-convert": "^2.0.1",
        "eslint": "^6.8.0",
        "eslint-config-standard": "^14.1.1",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.1",
        "gulp": "^4.0.2",
        "gulp-eslint": "^6.0.0",
        "gulp-plumber": "^1.2.1",
        "gulp-postcss": "^8.0.0",
        "postcss-sorting": "^5.0.1"
    }
}
